# Supabase Configuration
# Get these from your Supabase project settings -> API
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Database Configuration
# Get this from your Supabase project settings -> Database -> Connection string
DATABASE_URL="postgresql://postgres:password@db.your-project-id.supabase.co:5432/postgres"

# Demo Mode Configuration (Development Only)
# Set to 'false' to disable demo mode even in development
NEXT_PUBLIC_ENABLE_DEMO_MODE="true"

# Optional: Web Push Notifications (Phase 4)
# Generate VAPID keys: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Optional: Email configuration for notifications (Phase 4)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"
